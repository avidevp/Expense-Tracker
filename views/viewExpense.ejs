<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <script
          src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
          integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
          crossorigin="anonymous"
        ></script>
        <script
          src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
          integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
          crossorigin="anonymous"
        ></script>
        <script
          src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
          integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
          crossorigin="anonymous"
        ></script>
        <link
          rel="stylesheet"
          href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
        />
        <style>
            .table-center {
              margin: 2rem auto;
            }
          </style>
      </head>
<body body style="background-color: white; text-align: center;">
    <nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Spending Tracker</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <div class="dropdown">
              <button
                class="btn btn-primary dropdown-toggle"
                type="button"
                data-toggle="dropdown"
                aria-expanded="false"
              >
                User <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li>
                  <a class="nav-link active" aria-current="page" href="/">Home</a>
                </li>
                <li><a class="nav-link" href="/login">Login</a></li>
                <li><a class="nav-link" href="/register">Register</a></li>
                <li><a class="nav-link" href="/addexpense">New Expense</a></li>
                <li><a class="nav-link" href="/getexpense">Show Expense</a></li>
                <li><a class="nav-link" href="/logout">Log Out</a></li>
              </ul>
            </div>
          </div>
        </div>
      </nav>
  <h2>Expenses</h2> <br><br>
  <% expense.forEach(function(data) { %>
    <h4><%= data.date %></h4>
    <table class="table table-dark table-striped table-hover table table-bordered table-center" style="width: 70%;">
      <tr class="table-dark">
        <th scope="col">Amount</th>
        <th scope="col">Description</th>
      </tr>
      <% data.content.forEach(function(item) { %>
        <tr class="table-dark">
          <td><%= item.amount %></td>
          <td><%= item.description %></td>
        </tr>
      <% }); %>
    </table>
  <% }); %>
</body>
</html>
